macro run nevt=1
*
*
*
exec /afs/rhic/star/packages/SL98b/kumacs/util/setup_global_macros.kumac
*
*    Import global macro names
*
macro/global/import DATA_SAMPLES
macro/global/import KUMACS_UTIL
macro/global/import PAMS_CTF_KUMAC 
*
exec [KUMACS_UTIL]setup_dir
*
*   Open input file
*
mfile = [DATA_SAMPLES]muons_100_ctb.dsl
exec [KUMACS_UTIL]input_g2t_file#init [mfile]
*
*   Loop over events
*
do ie=1,[nevt]
   exec [KUMACS_UTIL]input_g2t_file#read
   if ( [ie] .eq. 1 ) then 
      exec [PAMS_CTF_KUMAC]cts_init 
      exec [PAMS_CTF_KUMAC]ctu_init 
   endif 
  exec [PAMS_CTF_KUMAC]cts_run
  exec [PAMS_CTF_KUMAC]ctu_run
  table/print data/ctf/ctb_raw
  wait
enddo 
*
