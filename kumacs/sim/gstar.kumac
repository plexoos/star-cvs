 macro init_geom geomtype
   
   if [geomtype].eq.muons  then
     message ' initializing for muons with no mag or Bfield! '
      gsflag geom 0
      mode cave geom 1
      mode tpce geom 1
      mode g2tm geom 1
   else
      message ' have not implemented the geometry you want!'
   endif
   
   
 return

**************************************************************
 
 macro init_phys phystype
   
    if [phystype].eq.muons then
      exec set_hadr_phys_off
      dcay 0
      message ' gstar_phys.kumac - > hadron physics OFF'
    elseif [phystype].eq.auau then
      exec set_hadr_phys_on
      message ' gstar_phys.kumac - > hadron physics ON'
    else 
      message ' gstar_phys.kumac - > not a valid physics type'
    endif
    
 return
 
*****************************************
 
 macro load_lib
   
   cd /dui/geant
   make geometry
   cd /dui/geant
   make sim/g2t
   cd /dui/geant
   make sim/gstar
   cd /dui
   
 return
 
