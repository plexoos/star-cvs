          Position ISKH x =  0.0 _
                        y = -1.0*(Mod_Thk/2.0+ISHY_Thk/2.0) _
                        z = -ISBG_Length/2.0+ISBG_SensorWidth*(nu-0.5)
          Position ISCL x =  0.0 _
                        y = -1.0*(Mod_Thk/2.0+ISHY_Thk+ISCU_Thk/2.0) _
                        z = -ISBG_Length/2.0+ISBG_SensorWidth*(nu-0.5)
        endif
