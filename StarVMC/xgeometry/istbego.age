      enddo

*     place the interconnects, east and west side
      USE ISBG Layer=2
      USE ISRR Layer=2
      USE ISCC Version=1
      Create   IBME
      Position IBME x =  0.0 _
                    y =  0.0 _
                    z =  1.0*(ISBG_Length/2.0+ISRR_Length+ISCC_Length/2.0)
      Create   IBMW
      Position IBMW x =  0.0 _
                    y =  0.0 _
                    z = -1.0*(ISBG_Length/2.0+ISRR_Length+ISCC_Length/2.0)

