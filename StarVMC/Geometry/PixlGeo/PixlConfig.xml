<Document file="StarVMC/Geometry/PixlGeo/PixlConfig.xml">
<Detector name="PIXL" comment="STAR Pixel detector">

<Modules> PixlGeo3,  PixlGeo4,  PixlGeo5,  PixlGeo6,  PixlGeo6b, PsupGeo </Modules>

<!-- Switch off the pixel systems -->
<Setup name="PIXLof" module="PixlGeo3" onoff="off" comment="OFF" />

<!-- Active pixel detector -->
<Setup name="PIXLon" onoff="on" simu="2" module="PixlGeo3" comment="Version 3 pixel detector" />
<Setup name="PIXL00" onoff="on" simu="2" module="PixlGeo3" comment="Version 3 pixel detector" />
<Setup name="PIXL01" onoff="on" simu="2" module="PixlGeo3" comment="Version 3 pixel detector" />
<Setup name="PIXL02" onoff="on" simu="2" module="PixlGeo4" comment="Version 4 pixel detector" />
<Setup name="PIXL05" onoff="on" simu="2" module="PixlGeo5" comment="Version 5 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="7" />
  <Init struct="pxlw" var="ladrconfig" value="1" />
</Setup>
<Setup name="PIXL06" onoff="on" simu="2" module="PixlGeo6b" comment="Version 6 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="1" />
  <Init struct="pxlw" var="ladrconfig" value="1" />
  <Init struct="pixl" var="misalign" value="0" />
</Setup>

<Setup name="PIXL62" onoff="on" simu="2" module="PixlGeo6b" comment="Version 6 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="1" />
  <Init struct="pxlw" var="ladrconfig" value="2" />
  <Init struct="pixl" var="misalign" value="0" />
</Setup>

<!-- Misalignable versions of the pixel detector -->
<Setup name="PIXL06b" onoff="on" simu="2" module="PixlGeo6b" comment="Version 6 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="1" />
  <Init struct="pxlw" var="ladrconfig" value="1" />
  <Init struct="pixl" var="misalign" value="1" />
</Setup>

<Setup name="PIXL62b" onoff="on" simu="2" module="PixlGeo6b" comment="Version 6 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="1" />
  <Init struct="pxlw" var="ladrconfig" value="2" />
  <Init struct="pixl" var="misalign" value="1" />
</Setup>

</Detector>
</Document>
