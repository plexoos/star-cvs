<Document file="StarVMC/Geometry/PixlGeo/PixlConfig.xml">
<Detector name="PIXL" comment="STAR Pixel detector">

<Modules> PixlGeo3,  PixlGeo4,  PixlGeo5,  PixlGeo6,  PsupGeo </Modules>

<!-- Switch off the pixel systems -->
<Setup name="PIXLof" module="PixlGeo3" onoff="off" comment="OFF" />

<!-- Active pixel detector -->
<Setup name="PIXLon" onoff="on" module="PixlGeo3" comment="Version 3 pixel detector" />
<Setup name="PIXL00" onoff="on" module="PixlGeo3" comment="Version 3 pixel detector" />
<Setup name="PIXL01" onoff="on" module="PixlGeo3" comment="Version 3 pixel detector" />
<Setup name="PIXL02" onoff="on" module="PixlGeo4" comment="Version 4 pixel detector" />
<Setup name="PIXL05" onoff="on" module="PixlGeo5" comment="Version 5 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="7" />
  <Init struct="pxlw" var="ladrconfig" value="1" />
</Setup>
<Setup name="PIXL06" onoff="on" module="PixlGeo6" comment="Version 6 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="1" />
  <Init struct="pxlw" var="ladrconfig" value="1" />
</Setup>

<Setup name="PIXL62" onoff="on" module="PixlGeo6" comment="Version 6 pixel detector"  >
  <Init struct="pxlw" var="secversion" value="1" />
  <Init struct="pxlw" var="ladrconfig" value="2" />
</Setup>

</Detector>
</Document>
