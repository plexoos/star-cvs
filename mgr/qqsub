#!/bin/csh -f
set run = ${STAR}/mgr/$1
shift
set batch = r`echo ${*} | sed -e 's/ //g' -e 's/-/_/g' -e 's/_iauau_ce_b0_2_//g' -e 's/.xdf//g'`
echo ${batch}
rm -f ${batch}
cat > ${batch} <<EOF
#!/usr/local/bin/tcsh -x
# Send mail to these users
#\$ -M ${USER}@rcf.rhic.bnl.gov
# Mail at beginning/end/on suspension
#\$ -m bes
${run} ${*}
EOF
more ${batch}
set PWD = `pwd`
echo qsub -o ${PWD}/${batch}.log -e ${PWD}/${batch}.err   ${batch}
switch (`uname -n`)
    case rlnx03.rhic.bnl.gov:
	/usr/local/DQS32/bin/qsub32 -l test -o ${PWD}/${batch}.log -e ${PWD}/${batch}.err ${batch}
        breaksw
    case rlnx*.rhic.bnl.gov:
	/usr/local/DQS318/bin/qsub318 -l star -o ${PWD}/${batch}.log -e ${PWD}/${batch}.err ${batch}
        breaksw
    default:
	qsub  ${batch} -l cx_star -o ${PWD}/${batch}.log -e ${PWD}/${batch}.err ${batch}
        breaksw
endsw
