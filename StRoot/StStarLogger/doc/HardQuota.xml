<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="true" xmlns:log4j="http://jakarta.apache.org/log4j/">
<!-- s from 
   This example allows first 400 messages at most and and remove all no-INFO messages.
   It is applide to the entire application (watch "root" logger)
-->

  <appender name="D1" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-3c{2}:%-5p - %m%n"/>
    </layout>	    
    <filter class="StarOptionFilter">
         <param name="TotalMessagesQuota" value="400"/>
    </filter>

    <filter class="LevelMatchFilter">
         <param name="LevelToMatch"  value="INFO"/>
         <param name="AcceptOnMatch" value="true"/>
    </filter>

  </appender>
 

  <root>
     <priority value ="DEBUG" />
     <appender-ref ref="D1" />
  </root>
  
</log4j:configuration>
