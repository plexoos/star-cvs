<!-- I am getting a cr when I resolve a variable which causes the
     ending ;, " and/or } to be on the following line.
     To deal with this I put these characters into the transformation.
     Seems awkward. Also end up with ""; lines in cases where the
     variable is empty. -->
<jobDescription>
    <standardElements>
        <doEStructMacro>
            <analysisType id='analysisType' widget='combobox'>StEStructCorrelation</analysisType>
            <ptCuts id='ptCuts' widget='none'>0 100</ptCuts>
            <ptCentralities id='ptCentralities' widget='none'>0 100</ptCentralities>
            <cutModeInit id='cutModeInit' widget='text'>
    int cutBinMode = 3;
    int numberOfAnalyses = mbNBins-1;
    // choose the mode for the binning
    StEStructCutBin* cb=StEStructCutBin::Instance();
    cb-&gt;setMode(cutBinMode);
    StEStruct2ptCorrelations** analysis = new StEStruct2ptCorrelations*[numberOfAnalyses];
    StEStruct2ptCorrelations* currentAnalysis;
            </cutModeInit>
            <declarePtDefHistograms id='declarePtDefHistograms' widget='none'>;</declarePtDefHistograms>
            <declareAnalysis id='declareAnalysis' widget='text'>
        analysis[i] = new StEStruct2ptCorrelations();
            </declareAnalysis>
            <getCurrentAnalysis id='getCurrentAnalysis' widget='none'>
        currentAnalysis = (StEStruct2ptCorrelations *) estructMaker->mCurrentAnalysis;
            </getCurrentAnalysis>
            <fillPtDefHistograms id='fillDefHistograms' widget='none'>;</fillPtDefHistograms>
            <pairCutsWrite id='pairCutsWrite' widget='text'>
        if (analysis) {
            StEStructPairCuts* pcuts = &amp;analysis[i]-&gt;getPairCuts();
            if (pcuts) {
                pcuts-&gt;printCuts(ofs);
                pcuts-&gt;writeCutHists(tfc);
            } else {
                ofs&lt;&lt;" No pair cuts for this centrality."&lt;&lt;endl;
            }
        }
            </pairCutsWrite>
            <savePtDefHistograms id='savePtDefHistograms' widget='none'>;</savePtDefHistograms>
        </doEStructMacro>

    </standardElements>
</jobDescription>
