<?xml version='1.0' encoding='UTF-8' ?>

<!-- This file contains information over-riding hijingDefault. -->
<jobDescription>
    <jobType>
        <Hijing>
            <hijingParams>
                <hEnergy Comment=' Frame/Energy                    '>
                    <charValue widget = 'entry'> 'CMS' </charValue>
                    <floatValue widget = 'entry'> 19.0 </floatValue>
                </hEnergy>
                <hQuench Comment=' Jet quenching (1=yes/0=no)      '>
                    <intValue widget = 'entry'> 1 </intValue>
                </hQuench>
                <hMaxJets Comment=' Max # jets per nucleon (D=10)   '>
                    <intValue widget = 'entry'> 10 </intValue>
                </hMaxJets>
            </hijingParams>
        </Hijing>
    </jobType>
    <standardElements>
        <jobControl>
            <jobName widget='entry' id='jobName'>hijing19QOn</jobName>
            <outputDir widget='entry' id='outputDir'>$env(MYDATA)/Hijing/auau19/QuenchOn</outputDir>
            <eventsPerJob widget='entry' id='eventsPerJob'>15000</eventsPerJob>
            <jobPurpose widget='text'>Generic run of AuAu Hijing at 19GeV with quench on, jets.
            </jobPurpose>
        </jobControl>
    </standardElements>
</jobDescription>
