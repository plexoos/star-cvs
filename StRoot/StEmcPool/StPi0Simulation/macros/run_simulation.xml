<?xml version="1.0" encoding="utf-8" ?>
<job simulateSubmission="false" fileListSyntax="paths" maxFilesPerProcess="&mymaxfiles;" minFilesPerProcess="&myminfiles;" filesPerHour="&myfilesperhour;" name="&mytag;">
    <command>
starver &mystarver;
cp -fr "&mypwdanalysis;/StPi0Simulation/macros/&myrun;" "$SCRATCH/"
"$SCRATCH/&myrun;" \
'&mypwd;' \
'&mypwdanalysis;' \
'&mydebug;' \
'&mytag;' \
'&myscript;' \
"$SCRATCH" \
'&mynevents;' \
$JOBID \
'&mygeometrytag;' \
'&myconfig;' \
'&mypathout;' \
'&mykeepfzd;'
    </command>
    <stdout discard="&mydiscardstdout;" URL="file:&mypathout;/&mytag;_$JOBID.out"/>
    <stderr discard="&mydiscardstderr;" URL="file:&mypathout;/&mytag;_$JOBID.err"/>
    <input URL="&myquery;" nFiles="all"/>
</job>
