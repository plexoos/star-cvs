LIBNAME  = BEMCPlots

HDRS     = BEMCPlots.h BEMCPlotsNames.h BEMC_DSM_decoder.h
SRCS     = BEMCPlots.cxx BEMC_DSM_decoder.cxx

CXX    = g++
LD     = g++
AR     = ar rul

DEBUG  =-g -O 
DEFINES=

ifdef IN_PANITKIN
DEFINES = -DIN_PANITKIN	
endif

ROOTCFLAGS    = $(shell root-config --cflags) 
ROOTLIBS      = $(shell root-config --libs) -lNew
#
OBJS   = $(notdir $(patsubst %.cxx,%.o,$(SRCS)))

#
CFLAGS   = -Wall $(DEBUG) $(DEFINES) -fPIC $(ROOTCFLAGS)


CXXFLAGS = $(CFLAGS)  -I../../../StRoot  -I/RTS/src/EVP_READER -I/RTS/include -I../../St_base

LDFLAGS  = -shared 


all:	$(LIBNAME)

$(LIBNAME): $(OBJS)
	@echo Panitkin=$(IN_PANITKIN)	
	$(CXX) $(LDFLAGS) $^ -o lib$(LIBNAME).so

clean:
	-rm -f *.o lib$(LIBNAME).*

%.o: %.cxx
	$(CXX) $(CXXFLAGS) -c $< -o $@
